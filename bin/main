#!/usr/bin/env ruby

# Say welcome for the players
puts 'Welcome to the Tic Tac Toe '

# Ask for the username
puts 'Enter your name'
player_one = gets.chomp
player_two = gets.chomp

puts "Hi #{player_one} and #{player_two}"
# Ask them to choose symbol

symp = false

while symp == false
  puts 'Please enter your symbol [X, O]'
  player1_symp = gets.chomp.upcase
  if %w[X O].include?(player1_symp)
    symp = true
    player2_symp = (player1_symp == "X"? "O": "X")
  else
    puts "Invalid symbol"
  end
  
end


puts "#{player_one} your symbol is #{player1_symp}"
puts "#{player_two} your symbol is #{player1_symp}"

# display the body game "the board"
board = [
  [1, 2, 3],
  [4, 5, 6],
  [7, 8, 9]
]
# ask the first player to make his first move puts "Your movement"

game_on = true

# initial instructions for player


while game_on
  puts 'Player_1 your turn. Choose a number between 1 and 9'
  # loop for each move
  p_one = gets.chomp
  if p_one
    p p_one
    p board
  else
    puts 'wrong input'
    p_one = gets.chomp
  end

  game_on = false if winner
  # and/or draw (the exact condition in this milestone is not important)

  # loop for each move
  puts 'Player_2 your turn. Choose a number between 1 and 9'
  p_two = gets.chomp
  if p_two
    p p_two
    p board
  else
    puts 'wrong input'
    p_two = gets.chomp
  end

  game_on = false if winner
  # and/or draw (the exact condition in this milestone is not important)
end

# display the result after winning
winning = 'winning cases'
if winning
  puts "The winner is #{winner}"

elsif draw
  puts 'There is no winner'
end

# Ask "do you want to play again ?" >> or close the game (y, n)
puts 'Do you want to play again? [y/n]'
again = gets.chomp
if again == 'y'
  puts 'play again'

else
  puts 'end game'
end
